<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="10dp"
    tools:context="com.example.marta.luriatest.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/colorPrimary"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <com.example.marta.luriatest.FingerPathB
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/canvas"/>

    <Button
        android:text="@string/buttonEnd"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/buttoncanvas"
        android:textColor="@color/buttonTextCanvas"
        android:id="@+id/buttonEnd"/>

    <TextView
    android:id="@+id/name"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif"
    android:layout_marginTop="20dp"
    android:textAllCaps="false"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="20sp"
    android:typeface="monospace"/>

</RelativeLayout>
