<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/intro"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:src="@drawable/logo_luria"
        android:layout_centerHorizontal="true"
        android:padding="25dp"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/logo"
    android:id="@+id/linearLayout">

    <Button
        android:text="@string/buttonNewTest"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="viewEnd"
        android:drawablePadding="20dp"
        android:drawableEnd="@mipmap/test_a_round"
        android:background="@drawable/mybutton"
        android:fontFamily="sans-serif"
        android:typeface="monospace"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:id="@+id/buttonNewTest"/>

    <Button
        android:text="@string/buttonRepeatTest"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="viewEnd"
        android:drawablePadding="20dp"
        android:drawableEnd="@mipmap/test_b_round"
        android:background="@drawable/mybutton"
        android:fontFamily="sans-serif"
        android:typeface="monospace"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:id="@+id/buttonRepeatTest"/>

    <Button
        android:text="@string/buttonEditData"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="viewEnd"
        android:drawablePadding="20dp"
        android:drawableEnd="@mipmap/test_c_round"
        android:background="@drawable/mybutton"
        android:fontFamily="sans-serif"
        android:typeface="monospace"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:id="@+id/buttonEditData"/>
    </LinearLayout>
</RelativeLayout>