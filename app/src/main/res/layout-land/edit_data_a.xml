<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/allRelativeLayout"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <TextView
        android:id="@+id/name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:typeface="monospace"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:src="@drawable/logo_luria" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/logo"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout">

            <TextView
                android:id="@+id/textTime"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/stringDate"
                android:fontFamily="sans-serif"
                android:text="@string/textTime"
                android:layout_below="@id/textTime"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:typeface="monospace"/>

            <TextView
                android:id="@+id/stringDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/textTime"
                android:fontFamily="sans-serif"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:typeface="monospace"/>

            <TextView
                android:text="@string/textFirstName"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/textTime"
                android:fontFamily="sans-serif"
                android:typeface="monospace"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:id="@+id/textFirstName"/>

            <EditText
                android:hint="@string/editTextFirstName"
                android:maxLines="1"
                android:lines="1"
                android:inputType="textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/mybutton"
                android:layout_toEndOf="@id/textFirstName"
                android:layout_below="@id/stringDate"
                android:fontFamily="sans-serif"
                android:typeface="monospace"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:id="@+id/editTextFirstName"
                android:imeOptions="actionDone"/>

            <TextView
                android:id="@+id/textLastName"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textFirstName"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:text="@string/textLastName"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:typeface="monospace" />

            <EditText
                android:id="@+id/editTextLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextFirstName"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/textLastName"
                android:background="@drawable/mybutton"
                android:fontFamily="sans-serif"
                android:hint="@string/editTextLastName"
                android:maxLines="1"
                android:lines="1"
                android:inputType="textCapSentences"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:typeface="monospace"
                android:imeOptions="actionDone"/>

            <TextView
                android:id="@+id/textAge"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textLastName"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:text="@string/textAge"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:typeface="monospace" />

            <EditText
                android:id="@+id/editTextAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextLastName"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/textAge"
                android:background="@drawable/mybutton"
                android:fontFamily="sans-serif"
                android:hint="@string/editTextAge"
                android:maxLines="1"
                android:lines="1"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:typeface="monospace"
                android:imeOptions="actionDone"/>

            <TextView
                android:id="@+id/textIDNumber"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textAge"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:text="@string/textIDNumber"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:typeface="monospace" />

            <EditText
                android:id="@+id/editTextIDNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextAge"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/textIDNumber"
                android:background="@drawable/mybutton"
                android:fontFamily="sans-serif"
                android:hint="@string/editTextIDNumber"
                android:maxLines="1"
                android:lines="1"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:typeface="monospace"
                android:imeOptions="actionDone"/>

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textIDNumber"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:text="@string/textDescription"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:typeface="monospace"/>

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextIDNumber"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/textDescription"
                android:background="@drawable/mybutton"
                android:fontFamily="sans-serif"
                android:hint="@string/editTextDescription"
                android:inputType="textMultiLine"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:typeface="monospace"
                android:imeOptions="actionDone"/>

            <Button
                android:id="@+id/buttonTest"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/editTextDescription"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/mybutton"
                android:fontFamily="sans-serif"
                android:text="@string/buttonTest"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:typeface="monospace" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>